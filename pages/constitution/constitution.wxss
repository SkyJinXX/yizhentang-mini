.test-container {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: flex-start;
    padding: 40rpx;
    background-color: #f4f4f4;

    box-sizing: border-box;
    height: 100%;
}
    .test {
        display: flex;
        flex-flow: column;
        justify-content: space-between;
        align-items: flex-start;
        padding: 40rpx;
        box-sizing: border-box;

        width: 100%;
        height: 100%;
        border-radius: 10rpx;
        background-color: #fff;
        color: #717171;
    }
        .question-container {
            font-size: 40rpx;
            margin-bottom: 60rpx;
        }
        .answer-list {
            display: flex;
            flex-flow: column;
            justify-content: flex-start;
            align-items: center;
            font-size: 36rpx;
            padding: 20rpx;
        }
            .answer-item {
                display: flex;
                flex-flow: row nowrap;
                justify-content: space-between;
                width: 100%;
                /* padding-bottom: 20rpx;
                border-bottom: #f0f0f0 1px solid; */
            }
            .line {
                width: 80%;
                height: 1px;
                background-color: #f0f0f0;
                margin: 20rpx 0;
            }
        .next {
            align-self: center;
            box-sizing: border-box;
            width: 80%;
            background-color: #910000;

            margin: 40rpx 0rpx 0;
            color: white;
        }
    .progress {
        color: gray;
        margin-top: 10rpx;
    }

