.point-value-container {
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  margin: 40rpx 0;
}
  .point-value {
    text-align: center;
    margin-right: 100rpx;
  }
    .point-value-text {
      font-size: 30rpx;
      margin-bottom: 20rpx;
      display: block;
      line-height: 32rpx;
    }
    .point-value-value {
      font-size: 46rpx;
    }
  .point-value-store {
    text-align: center;
  }
    .point-value-store-icon {
      font-size: 46rpx;
    }

