.info-menu {
  display: flex;
  flex-flow: column nowrap;

}
  .info-menu__item {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;

    padding: 20rpx;
    border-bottom: 1px solid rgb(206, 202, 202);
  }
  .info-menu__item:nth-child(1) {
    border-top: 1px solid rgb(206, 202, 202);
  }
    .info-item-text {
      font-size: 28rpx;
    }
    .info-item-arrow{

      width: 10rpx;
      height: 10rpx;
      border-top: 2px solid rgb(206, 202, 202);
      border-right: 2px solid rgb(206, 202, 202);
      transform: translate(0, -50%) rotate(45deg);
      margin-top: 10rpx;
    }