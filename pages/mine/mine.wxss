.info-card {
  display: flex;
  flex-flow: row nowrap;
  align-items: flex-start;
  justify-content: flex-start;

  width: 687rpx;
  height: 411rpx;
  background: url(https://i.loli.net/2019/05/14/5cdaa926449c970834.png) no-repeat;
  background-size: contain;

  box-sizing: border-box;
  margin: 0 auto;
  padding: 40rpx 30rpx;
}
  .get-userinfo::after{ border: none; }
  .get-userinfo {
    width: 106rpx;
    height: 106rpx;
    margin: 0;
    padding: 0;
    border-radius: 50%;
    line-height: 106rpx;
    font-size: 24rpx;
  } 
  .userinfo-avatar {
    width: 106rpx;
    height: 106rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }

  .userinfo-nickname {
    height: 106rpx;
    line-height: 128rpx;
    color: #000;
    font-size: 32rpx;
  }
