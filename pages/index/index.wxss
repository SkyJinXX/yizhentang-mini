.authorize-background,.official-account-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(153, 153, 153, 0.8);
    z-index: 1;

    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
}
    .authorize-modal {
        display: flex;
        flex-flow: column nowrap;
        justify-content: center;
        padding: 30rpx 40rpx;

        /* width: 500rpx; */
        /* height: 300rpx; */
        background-color: #fff;
        border-radius: 10rpx;
    }
        .authorize-title {
            display: block;
            text-align: center;
            font-size: 40rpx;
            margin-bottom: 10rpx;
            /* font-weight: bold; */
        }
        .authorize-text {
            display: block;
            margin-bottom: 20rpx;
            text-align: center;
            font-size: 32rpx;

        }
        .authorize-button {
            font-size: 32rpx;
            margin: 0 20rpx;

            background-color: #910000;
            color: white;
        }
    .official-account-modal {
        display: flex;
        flex-flow: column nowrap;
        justify-content: center;

        width: 300px;
        height: 84px;
        background-color: #fff;
        border-radius: 10rpx;
        overflow: hidden;
    }



