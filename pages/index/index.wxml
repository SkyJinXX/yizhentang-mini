<view class="container container-search">
  <view class="search-box">
    <icon type="search" size="18"/>
    <input placeholder="请输入关键词，例如＃产后催乳＃" class="search" confirm-type="search"/>
  
  </view>
</view>

<view class="container container-menu">
  <view class="menu__xue"></view>
  <view class="menu__mai"></view>
  <view class="menu__hui"></view>
  <view class="menu__xin"></view>
</view>

<view class="container container-swiper">
  <swiper class="swiper-entry" indicator-dots="{{true}}" autoplay="{{true}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item class="swiper-entry__item">
        <image src="{{item}}" class="slide-image" mode="widthFix"/>
      </swiper-item>
    </block>
  </swiper>
</view>














