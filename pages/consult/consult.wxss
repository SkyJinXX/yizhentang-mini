page {
    padding: 10rpx 20rpx;
    box-sizing: border-box;
}

.department-container {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    padding: 0 0rpx 20rpx;
    border-bottom: rgb(206, 202, 202) 1px solid;
    margin-bottom: 10rpx;
    position: relative;
}
    .department-choose-box {
        display: flex;
        flex-flow: row;
        align-items: center;
    }
        .department-choose-icon {
            width: 60rpx;
        }
        .department-choose-title {
            font-size: 30rpx;
            margin-left: 10rpx;
        }
    .department-box {
        display: flex;
        flex-flow: row;
        align-items: center;
    }
        .department {
            font-size: 34rpx;
            color: #999;
        }
        .arrow{
            width: 14rpx;
            height: 14rpx;
            border-top: 2px solid #999;
            border-right: 2px solid #999;
            transform: translate(-5rpx, -50%) rotate(45deg);
            margin-top: 20rpx;
            margin-left: 14rpx;
        }
